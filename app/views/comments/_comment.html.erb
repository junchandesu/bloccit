<%= content_tag :div, class: 'media', id: "comment-#{comment.id}" do %>
	<%= link_to '#', class: "pull-left" do %>
	    <%= image_tag(comment.user.avatar.tiny.url, class: "media-object") if comment.user.avatar? %>
    <% end %>
    <div class = "media-body">
     	<small>
			<p><%= comment.body %></p>
			submitted <b><%= time_ago_in_words(comment.created_at) %> ago </b>by <i><%= comment.user.name %> </i>
			<%= puts comment.inspect %>
			<% if policy(comment).destroy? && !comment.post.nil?%>
			 <%= link_to "Delete", [comment.post, comment], method: :delete, remote: true %>

			<% end %>
		</small>
     </div>
<% end %>