


<div class="row">
  <div class="col-md-8">

  <% if @summaries.present? %>
  	   <h1><%= link_to @post.title, [@topic, @post, @summaries] %></h1>
    <% else %>
 
     <h1>
      <%= @post.markdown_title %>
     </h1>
    
      <%= link_to "New Summaries", new_topic_post_summary_path(@topic, @post, @summary), class: 'btn btn-info' %>
      <% end %>
      
      <%= @post.markdown_body %>

    <p>

    
     
        <% @comment.each do |comment| %>
        <h3><%= render 'comments/comment', {topic: @topic, post: @post,comment: comment } %></h3>
     
  
      <% end %>


   

    </p>  
<%= render 'comments/form', {topic: @topic, post: @post, comment: @comment.new } %>
  </div>

 
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>

    <% if policy(@post).destroy? %>
      <%= link_to "Delete Post", [@topic, @post], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'}  %>
      <% end %>
  </div>
</div>

