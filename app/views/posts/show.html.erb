


<div class="row">
  <div class="col-md-8">

  	<% if @summaries.present? %>
  	<h1><%= link_to @post.title, [@topic, @post, @summaries] %></h1>
    <% else %>
    <h1><%= @post.title %></h1>
    <%= link_to "New Summaries", new_topic_post_summary_path(@post, @summary), class: 'btn btn-info' %>
    <% end %>
    <p><%= @post.body %></p>
  </div>
 
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

