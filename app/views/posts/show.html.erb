


<div class="row">
  <div class="col-md-8">

  	<% if @summaries.present? %>
  	<h1><%= link_to @post.title, [@topic, @post, @summaries] %></h1>
    <% else %>
 
  <h1>

<%= @post.markdown_title %>
  </h1>
    <%= link_to "New Summaries", new_topic_post_summary_path(@topic, @post, @summary), class: 'btn btn-info' %>
    <% end %>
     <small>
       <%= image_tag(@post.user.picture.tiny.url) if @post.user.picture? %>
       submitted <%= time_ago_in_words(@post.created_at) %> ago by
       <%= @post.user.name %>
     </small>
    <p>

<%= @post.markdown_body %>
<% if @post.picture? %>
<%= image_tag(@post.picture_url(:large), width: 100, height: 100) %>
<% end %>
    </p>
  </div>
 
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>


