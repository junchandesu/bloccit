


<div class="row">
  <div class="col-md-8">

  <% if @summaries.present? %>
  	   <h1><%= link_to @post.title, [@topic, @post, @summaries] %></h1>
  <% else %>
 
     <h1>
      <%= @post.markdown_title %>
     </h1>
    
      <%= link_to "New Summaries", new_topic_post_summary_path(@topic, @post, @summary), class: 'btn btn-info' %>
  <% end %>
      
  <%= @post.markdown_body %>

  <p>

  
  <h3><%= render partial: 'comments/comment', collection: @comments %></h3>
    </p>  
    <% if policy(Comment.new).create? %>
<%= render partial: 'comments/form', locals: {topic: @topic, post: @post, comment: Comment.new} %>
    <% end %>
  </div>

 
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

